<Window x:Class="Bulls_And_Cows.Records"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рекорды" Height="593" Width="638" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="10,507,0,0" VerticalAlignment="Top" Width="106" Height="41" FontFamily="Verdana" FontSize="16" Click="Button_Click"/>
        <ListView HorizontalAlignment="Left" Height="348" Margin="66,142,0,0" VerticalAlignment="Top" Width="504">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Номер}" Header="Место" Width="50"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Слово}" Header="Имя" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Быки}" Header="Кол-во ходов" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Коровы}" Header="Слово" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Коровы}" Header="Дата" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
