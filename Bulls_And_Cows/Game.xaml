                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Номер}" Header="№" Width="25"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Слово}" Header="Слово" Width="130"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Быки}" Header="Быки" Width="50"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Коровы}" Header="Коровы" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
