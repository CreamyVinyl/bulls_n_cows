<Window x:Class="Bulls_And_Cows.Win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Победа!" Height="300" Width="638" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="images/WinWindow.jpg">
        </ImageBrush>
    </Window.Background>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="32,150,0,0" TextWrapping="Wrap" Text="Введите свое имя: " VerticalAlignment="Top" Width="232" Height="36" FontFamily="Verdana" FontSize="20"/>
        <TextBox x:Name="TextBox_Name" HorizontalAlignment="Left" Height="36" Margin="264,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" TextChanged="TextBox_Name_TextChanged" KeyDown="TextBox_Name_KeyDown"/>
        <Button x:Name="Button_OK" Content="ОК" HorizontalAlignment="Left" Margin="280,220,0,0" VerticalAlignment="Top" Width="106" Height="25" Click="Button_Click" IsEnabled="False" Background="#FFF5E7CD"/>

    </Grid>
</Window>
